<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <title>Bolt - OnlineOrderManager</title>
    <meta content="IE=edge" http-equiv="X-UA-Compatible">
    <link href="template/img/favicon.png" rel="icon" type="image/png">
    <meta name="description" content="">
    <meta name="viewport" content="width=device-width, initial-scale=1, minimum-scale=1, maximum-scale=1">
    <link href="~/template/bootstrap/css/bootstrap.css" rel="stylesheet" />
    <link href="~/template/theme/css/theme.css" rel="stylesheet" />

</head>
<body>
    <header class="header header-fixed nav-down">
        <div class="box mb-0">
            <div class="">
                <nav class="navbar navbar-default">
                    <div class="container-fluid">
                        <div class="navbar-header">
                            <a asp-area="" asp-controller="Identity" asp-action="Index" class="header-logo-small">
                                <img src="~/template/img/logo - 1.png" alt="store logo">
                            </a>
                            <button class="navbar-toggle" type="button" data-toggle="collapse" data-target=".js-navbar-collapse">
                                <span class="sr-only">Toggle navigation</span>
                                <span class="icon-bar"></span>
                                <span class="icon-bar"></span>
                                <span class="icon-bar"></span>
                            </button>
                        </div>
                        <div class="collapse navbar-collapse js-navbar-collapse">
                            <ul class="nav navbar-nav">
                                <li class="header-link"><a asp-area="" asp-controller="Identity" asp-action="Index">Home</a></li>
                                @if (this.User.Identity.IsAuthenticated)
                                {
                                    <li class="header-link"><a asp-area="" asp-controller="Menu" asp-action="Index">Menu</a></li>
                                    <li class="header-link"><a asp-area="" asp-controller="Cart" asp-action="Index">Cart</a></li>
                                }
                            </ul>
                            @await Html.PartialAsync("_LoginPartial")
                        </div>
                    </div>
                </nav>
            </div>
        </div>
    </header>



    @RenderBody()
    <footer class="light-bg ">
        <div class="footer pt-60 pb-60" id="footer">
            <div class="container">
                <div class="row">
                    <div class="smartphone-fw col-sm-3">
                        <h6 class="heading mt-0"><span>//</span> CONTACT </h6>
                        <address>
                            <strong>Bolt Coffee Store</strong><br>
                            Sofia, 1000<br>
                            +359895767201
                        </address>

                    </div>
