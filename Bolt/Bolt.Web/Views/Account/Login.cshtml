@using Microsoft.AspNetCore.Authentication
@model LoginViewModel
@inject SignInManager<User> SignInManager

<section>
    <div class="container">
        <div class="row">
            <div id="login" class="login col-md-6 col-md-offset-3 col-sm-12">
                <div class="panel panel-default shadow">
                    <div class="panel-heading ">
                        <div class="panel-title h3">
                            Login
                            <div class="pull-right login-context-info">
                                <a asp-action="Register" asp-route-returnurl="@ViewData["ReturnUrl"]">Register as a new user?</a>
                            </div>
                        </div>
                    </div>
                    <div class="panel-body">
                        <form asp-route-returnurl="@ViewData["ReturnUrl"]" method="post" id="loginform" class="form-horizontal">
                            <div asp-validation-summary="All" class="text-danger"></div>
                            <div class="form-group">
                                <div class="col-md-12">
                                    <label asp-for="Email"></label>
                                    <input asp-for="Email" class="form-control" id="email-sign-in" placeholder="Email Address" />
                                    <span asp-validation-for="Email" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-md-12">
                                    <label asp-for="Password"></label>
                                    <input asp-for="Password" class="form-control" id="password-sign-in" placeholder="Password" />
                                    <span asp-validation-for="Password" class="text-danger"></span>
                                </div>
                            </div>

                            @*<div class="custom-checkbox custom-checkbox-primary pull-left">
                                    <input id="custom-checkbox2" class="styled" type="checkbox" checked>
                                    <label for="custom-checkbox2">
                                        remember me
                                    </label>
                                </div>*@


                            <div class="form-group">
                                <!-- Button -->
                                <div class="col-md-12 login-btn">
                                    <button type="submit" id="btn-sign-in" class="btn btn-primary">Log in</button>
                                </div>
                            </div>
                            @*<div class="form-group">
                                    <div class="col-md-12">
                                        <a href="#">password recovery</a>
                                    </div>
                                </div>*@
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}